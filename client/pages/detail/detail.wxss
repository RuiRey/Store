/* pages/detail/detail.wxss */
.product-card{
  padding-bottom: 15rpx;
  background: white;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
}
.product-image{
  display: block;
  margin: 0 auto;
  margin-left: 100rpx;
  width: 370rpx;
  height: 370rpx;
}
.product-name{
  margin: 42rpx 49rpx 0;
  font-size: 38rpx;
  line-height: 53rpx;
  font-weight: bold;
  color: rgba(29, 29, 38, 0.8);
}
.product-source{
  margin: 5rpx 49rpx 0;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #8b8b8b;
}
.product-meta{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-right: 29rpx;
}
.product-money{
  width: 47rpx;
  height: 47rpx;
  border-radius: 50%;
  background: #f7e687;
  text-align: center;
  font-size: 34rpx;
  line-height: 47rpx;
  font-weight: bold;
  color: #34373d;
}
.product-price{
  margin: 0 10rpx;
  font-size: 38rpx;
}

.info-card{
  margin: 26rpx 27rpx;
  background: white;
  border-radius: 13rpx;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  padding: 0 26rpx;
}
.advantage-list {
  padding: 43rpx 15rpx 39rpx;
  border-bottom: 1px solid rgba(151, 151, 151, 0.2);
}
.advantage-item{
  display: flex;
  align-items: center;
}
.advantage-icon{
  width: 22rpx;
  height: 16rpx;
}
.advantage-text{
  margin-left: 15rpx;
  font-size: 28rpx;
  line-height: 47rpx;
  color: #34373d;
}

.comment-entry{
  padding: 26rpx 10rpx 21rpx;
}
.comment-btn{
  display: flex;
  align-items: center;
}
.comment-title{
  font-size: 30rpx;
  line-height: 42rpx;
  font-weight: bold;
  color: rgba(29, 29, 38, 0.8);
}
.comment-count{
  font-size: 28rpx;
  line-height: 40rpx;
  flex: 1;
  text-align: right;
  margin-right: 16rpx;
  color: #8b8b8b;
}
.comment-arrow{
  width: 11rpx;
  height: 18rpx;
}
.comment-preview{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #8b8b8b;
  margin-top: 26rpx;
}

.opr-cnt{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
}

.opt-trolley,
.opt-buy{
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  color: #34373d;
  font-weight: bold;
}
.opt-trolley{
  background: rgba(245, 224, 105, 0.6);
}
.opt-buy{
  background: #f5e069;
}